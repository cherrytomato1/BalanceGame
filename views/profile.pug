extends layout

block content
    .py-5.text-left
        h2 내정보

    .card.bg-light.mb-3.mt-5.mr-5
        .card-header
            .row
                .col-6
                    span
                        img(src='/images/chick.png' width=100 height=100)
                        b.card-title #{user.nickname}
                .col-6.text-right
                    a(href='/profile/auth')
                        button.btn.btn-outline-info(type='button') 프로필 수정
            #profile-progress-div.progress
                #profile-level-progress.progress-bar.progress-bar-striped.bg-warning(role='progressbar' style='width: 0%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100') 70%
        .card-body
            p.card-text=user.introduce

    script.
        window.addEventListener('load', function () {
            // let btn = document.getElementById('btn');
            let level = document.getElementById('profile-level-progress');
            let progressGroup = document.getElementById('profile-progress-div');
            // let lavel = document.getElementById('prolavel');
            // btn.addEventListener('click', function () {
            progressGroup.style.display = "block";
            setTimeout(function () {
                level.style.width = "70%";
            }, 200);
            // });
        });