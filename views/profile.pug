extends layout

block content
    .py-5.text-left
        h2 내정보

    .card.bg-light.mb-3.mt-5.mr-5
        .card-header
            span
                img(src='/images/chick.png' width=100 height=100)
                b.card-title #{user.nickname}
            .progress
                .progress-bar.progress-bar-striped.bg-warning(role='progressbar'
                    style='width: 25%;' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100') 25%
        .card-body

            p.card-text=user.introduce
    .py-4.text-right
        button.btn.btn-warning(type='button',href='/profile/auth') 프로필 수정
