| .login{
| width: 410px;
| position: absolute;
| left: 50%; top: 50%;
| transform: translate(-50%, -50%);
| text-align: center;
| }
| .login h2{
| padding: 0 0 20px;
| border-bottom: 2px solid #111;
| text-align: center;
| line-height: 1;
| font-size: 32px;
| counter-reset: #111;
| }
| .login ul{
| margin-top: 40px;
| margin-bottom: 33px;
| }
| .login &gt; ul li{
| list-style:none;
| padding: 0 0 12px;
| text-align: left;
| }
| .login &gt; ul li input{
| width: 100%;
| height: 46px;
| box-sizing: border-box;
| text-indent: 16px;
| }
| .login &gt; ul li input::-webkit-input-placeholder{
| font-size: 16px; color: #9fa19f;
| text-indent: 16px;
| }
| .login &gt; ul li input[type=&quot;checkbox&quot;]{
| position: absolute;
| left: -3000%;
| }
| .login &gt; ul li input[type=&quot;checkbox&quot;]+label{}
| .login &gt; ul li input[type=&quot;checkbox&quot;]:checked + label:before{
| background: url(./img/check.png)
| no-repeat center #333;
| border-color: #333;
| }
| .login &gt; ul li input[type=&quot;checkbox&quot;]+ label:before{
| content:&quot;&quot;;
| margin: 0 10px 0;
| display:inline-block;
| vertical-align: middle;
| margin-left: 10px;
| width:18px; height: 18px;
| border: 1px solid #666;
| background: #fff;
| }
| .login button{
| width: 100%;
| height: 56px;
| font-size:18px;
| color: #111;
| background-color: yellow;
| }
| .login div ul{
| list-style:none;
| display: flex;
| justify-content: center;
| }
| .login div{
| padding: 0 0 45px;
| }
| .login div li{
| position: relative;
| font-display: none;
| padding: 0 18px;
| }
| .login div li~li:before{
| content:&quot;&quot;;position: absolute; left:0;top:4px;
| height: 14px; width:1px; background: #111; transform:rotate(25deg);
| }
| .login div ul li a{
| font-size: 14px; color: #111;
| text-decoration: none;
| }
| .login &gt; a{
| font-size: 14px; color: #666;
| }